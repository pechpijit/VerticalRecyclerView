<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sourceandroid.verticalrecyclerview.Main2Activity"
    android:background="@drawable/bbbb">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:text="ยินดีต้อนรับสู่"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:text="แอพพลิเคชั่นที่มีความปลอดภัย"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:text="สูงที่สุดในโลก!!!"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
